rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Strict access for Engineer Forms
    match /engineer_forms/{projectId}/{allPaths=**} {
      // Only allow authenticated users to read/write
      // TODO: Enhance with role-based check (e.g., request.auth.token.role == 'Engineer') if custom claims are implemented
      allow read, write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
